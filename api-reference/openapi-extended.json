                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "team_members": {
                                            "type": "object",
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer"
                                                },
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/TeamMember"
                                                    }
                                                },
                                                "per_page": {
                                                    "type": "integer"
                                                },
                                                "total": {
                                                    "type": "integer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Add team member",
                "tags": [
                    "Team Members"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/TenantIdPath"
                    }
