                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Member added",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v2/admin/team-members/{tenantId}/{userId}": {
            "post": {
