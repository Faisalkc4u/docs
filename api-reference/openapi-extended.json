        "/api/v2/admin/webhooks/{tenantId}": {
            "get": {
                "summary": "List webhooks",
                "tags": [
                    "Webhooks"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/TenantIdPath"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of webhooks"
                    }
                }
            },
            "post": {
                "summary": "Create webhook",
                "tags": [
                    "Webhooks"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/TenantIdPath"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "url",
                                    "events"
                                ],
                                "properties": {
                                    "url": {
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "events": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
